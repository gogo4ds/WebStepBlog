@using System.Activities.Statements
@using WebStepBlog.Models
@model IEnumerable<WebStepBlog.Models.Tag>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Posts)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Title, "Index", "Posts") //TODO: Redirect to ALL posts with this tag
        </td>
        <td>
            @foreach (var post in item.Posts)
            {
                @Html.ActionLink(post.Title, "SinglePost", "Posts", new { id = post.Id }, null)
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}


</table>
